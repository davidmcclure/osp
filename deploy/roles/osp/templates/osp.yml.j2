---

osp:
  corpus: /osp/repository
  bin: /home/{{ ansible_ssh_user }}/osp/env/bin

hlom:
  corpus: /osp/hlom

tika:
  server: http://localhost:9998/tika

postgres:

  default:
    args:
      database: osp
      host: localhost
      port: 5432
      user: osp
      password: {{ osp_password }}

  remote:
    args:
      host: {{ osp_data_host }}
      password: {{ osp_password }}
    tables:
      - document_text

redis:
  host: localhost
  port: 6379
  db: 0

elasticsearch:
  host: localhost
  port: 9200

mapquest:
  api_key: {{ osp_mapquest_key }}
